    <script type="text/javascript">

        $(function () {

            $("#dialog1").dialog({
                autoOpen: false,
                modal: true,
                title: "ユーザ検索ダイアログ",
                height: 800,
                width: 550,
                buttons: {
                    Cancel: function () {
                        $(this).dialog("close");
                    }
                }
            });

            $("#dialog2").dialog({
                autoOpen: false,
                modal: true,
                title: "ユーザ検索ダイアログ",
                height: 800,
                width: 550,
